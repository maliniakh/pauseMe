{
  "manifest_version": 2,
  "name": "PauseMe",
  "description": "pauses/plays (music) videos across all tabs",
  "version": "1.0",
  "browser_action": {
    "default_icon": "img/icon_play.png",
    "default_popup": "popup.html"
  },
  "permissions": [
    "activeTab",
    "https://ajax.googleapis.com/",
    "bookmarks",
    "tabs",
    "http://*/*",
    "https://*/*"
  ],
  "content_scripts": [
    {
      "js": [
        "lib/jquery-2.1.4.min.js",
        "lib/purl.js",
        "lib/jquery.bpopup.min.js",
        "sites/site.js",
        "sites/youtube.js",
        "sites/soundcloud.js",
        "sites/mixcloud.js",
        "sites/spotify.js",
        "sites/mynoise.js",
        "content-script.js"
      ],
      "matches": [
        "https://www.youtube.com/*",
        "https://soundcloud.com/*",
        "https://www.mixcloud.com/*",
        "https://play.spotify.com/*",
        "http://mynoise.net/NoiseMachines/*"
      ]
    }
  ]
} 
