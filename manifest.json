{
  "manifest_version": 2,
  "name": "PauseMe",
  "description": "pauses/plays (music) videos across all tabs",
  "version": "1.0",
  "browser_action": {
    "default_icon": "icon_play.png"
  },
  "permissions": [
    "activeTab",
    "https://ajax.googleapis.com/",
    "bookmarks",
    "tabs",
    "http://*/*",
    "https://*/*"
  ],
  "background": {
    "scripts": [
      "jquery-2.1.4.min.js",
      "pauseMe.js"
    ]
  },
  "content_scripts": [
    {
      "js": [
        "jquery-2.1.4.min.js",
        "purl.js",
        "content-script.js"
      ],
      "matches": [
        "https://www.youtube.com/*",
        "https://soundcloud.com/*"
      ]
    }
  ]
} 
